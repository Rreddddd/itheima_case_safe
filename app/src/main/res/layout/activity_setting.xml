<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/panelTitle"
        android:text="设置中心"/>

    <lc.test.case_fase.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTitle="自动更新设置"
        app:itemDesOn="自动更新已开启"
        app:itemDesOff="自动更新已关闭"/>

    <lc.test.case_fase.view.SettingItemView
        android:id="@+id/siv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTitle="电话归属地显示设置"
        app:itemDesOn="归属地显示已开启"
        app:itemDesOff="归属地显示已关闭"/>
</LinearLayout>
