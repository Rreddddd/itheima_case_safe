<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DA8E8E"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="设置安全密码"/>

    <TextView
        android:id="@+id/tv_title1"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="输入密码:"/>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_below="@id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="确认密码:"/>

    <EditText
        android:id="@+id/et_pwd1"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/tv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_title1"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_pwd2"
        android:layout_toRightOf="@id/tv_title2"
        android:layout_below="@id/et_pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_title2"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_below="@id/et_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"/>

    </LinearLayout>
</RelativeLayout>
